<scene version="3.0.0">
    <default name="spp" value="16384"/>
    <default name="res" value="1024"/>
    <default name="max_depth" value="6"/>
    <default name="integrator" value="path"/>

    <integrator type='$integrator'>
        <integer name="max_depth" value="$max_depth"/>
    </integrator>

    <sensor type="perspective" id="sensor">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="0.01"/>
        <float name="far_clip" value="100.0"/>
        <float name="focus_distance" value="1000"/>
        <float name="fov" value="45"/>
        <transform name="to_world">
            <lookat origin="0,  0,  4"
                    target="0,  -1,  0"
                    up    ="0,  1,  0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
            <rfilter type="tent"/>
            <string name="pixel_format" value="rgb"/>
            <string name="component_format" value="float32"/>
        </film>
    </sensor>

    <!-- BSDFs -->

    <bsdf type="diffuse" id="gray">
        <rgb name="reflectance" value="0.5, 0.5, 0.5"/>
    </bsdf>

    <bsdf type="diffuse" id="white">
        <rgb name="reflectance" value="1 1 1"/>
    </bsdf>
        
    <bsdf type="principled" id="yellow">
      <rgb name="base_color" value="0.3 0.3 0"/>
      <float name="metallic" value="0.0" />
      <float name="specular" value="1.0" />
      <float name="roughness" value="0.0" />
    </bsdf>

    <bsdf type="conductor" id="mirror"/>

    <bsdf type="plastic" id = "my_plastic">
      <rgb name="diffuse_reflectance" value="0.1, 0.27, 0.36"/>
      <float name="int_ior" value="1.9"/>
    </bsdf>
    
    <bsdf type="thindielectric" id = "thin_glass">
      <string name="int_ior" value="air"/>
      <string name="ext_ior" value="air"/>
    </bsdf>

    <!-- Light -->

    <shape type="obj" id="light">
        <string name="filename" value="meshes/cbox_luminaire2.obj"/>
        <transform name="to_world">
          <translate x="0" y="3.85" z="0"/>
        </transform>
        <ref id="white"/>
        <emitter type="area">
            <rgb name="radiance" value="25 25 25"/>
        </emitter>
    </shape>

    <!-- Shapes -->

    <shape type="obj" id="floor">
        <string name="filename" value="meshes/cbox_floor2.obj"/>
        <ref id="gray"/>
        <transform name="to_world">
          <scale value="10.0"/>
          <translate x="0" y="-2" z="0"/>
        </transform>
    </shape>

    <shape type="obj" id="mirrorsphere">
        <string name="filename" value="data/sphere.obj"/>
        <transform name="to_world">
            <scale value="1"/>
            <translate x="0" y="-1" z="0"/>
        </transform>
        <ref id="my_plastic"/>
    </shape>
   
    <shape type="obj" id="glass_plate">
        <string name="filename" value="meshes/cbox_floor2.obj"/>
        <ref id="thin_glass"/>
        <transform name="to_world">
          <scale value="2.0"/>
          <translate x="0" y="3.84" z="0"/>
        </transform>
    </shape>

</scene>
