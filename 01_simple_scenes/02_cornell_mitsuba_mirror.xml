<scene version="3.0.0">
    <default name="spp" value="128"/>
    <default name="res" value="1024"/>
    <default name="max_depth" value="6"/>
    <default name="integrator" value="path"/>

    <integrator type='$integrator'>
        <integer name="max_depth" value="$max_depth"/>
    </integrator>

    <sensor type="perspective" id="sensor">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="0.01"/>
        <float name="far_clip" value="100.0"/>
        <float name="focus_distance" value="1000"/>
        <float name="fov" value="45"/>
        <transform name="to_world">
            <lookat origin="0,  0,  14"
                    target="0,  0,  0"
                    up    ="0,  1,  0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
            <rfilter type="tent"/>
            <string name="pixel_format" value="rgb"/>
            <string name="component_format" value="float32"/>
        </film>
    </sensor>

    <!-- BSDFs -->

    <bsdf type="diffuse" id="gray">
        <rgb name="reflectance" value="0.5, 0.5, 0.5"/>
    </bsdf>

    <bsdf type="diffuse" id="white">
        <rgb name="reflectance" value="1, 1, 1"/>
    </bsdf>

    <bsdf type="diffuse" id="green">
        <rgb name="reflectance" value="0.0, 0.5, 0.0"/>
    </bsdf>

    <bsdf type="diffuse" id="red">
        <rgb name="reflectance" value="0.5, 0.0, 0.0"/>
    </bsdf>

    
    <bsdf type="conductor" id="yellow">
      <string name="material" value="none"/>
      <rgb name="specular_reflectance" value="0.75 0.75 0.75"/>
    </bsdf>

    <bsdf type="dielectric" id="glass"/>

    <bsdf type="conductor" id="mirror"/>

    <!-- Light -->

    <shape type="obj" id="light">
      <string name="filename" value="meshes/cbox_luminaire2.obj"/>
        <transform name="to_world">
          <translate x="0" y="3.85" z="0"/>
        </transform>
        <ref id="white"/>
        <emitter type="area">
            <rgb name="radiance" value="25 25 25"/>
        </emitter>
    </shape>

    <!-- Shapes -->

    <shape type="obj" id="floor">
        <string name="filename" value="meshes/cbox_floor.obj"/>
        <ref id="gray"/>
        <transform name="to_world">
          <scale value="4.0"/>
        </transform>
    </shape>

    <shape type="obj" id="ceiling">
        <string name="filename" value="meshes/cbox_ceiling.obj"/>
        <ref id="gray"/>
        <transform name="to_world">
          <scale value="4.0"/>
        </transform>
    </shape>

    <shape type="obj" id="back">
        <string name="filename" value="meshes/cbox_back.obj"/>
        <ref id="gray"/>
        <transform name="to_world">
          <scale value="4.0"/>
        </transform>
    </shape>

    <shape type="obj" id="redwall">
        <string name="filename" value="meshes/cbox_greenwall.obj"/>
        <ref id="red"/>
        <transform name="to_world">
          <scale value="4.0"/>
        </transform>
    </shape>

    <shape type="obj" id="greenwall">
        <string name="filename" value="meshes/cbox_redwall.obj"/>
        <ref id="green"/>
        <transform name="to_world">
          <scale value="4.0"/>
        </transform>
    </shape>

    <shape type="obj" id="rabbit">
        <string name="filename" value="data/bunny.obj"/>
        <transform name="to_world">
            <scale value="3"/>
            <translate x="1" y="-4.2" z="0"/>
        </transform>
        <ref id="yellow"/>
    </shape>

</scene>
